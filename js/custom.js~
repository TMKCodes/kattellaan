$('#hc1').click(function() {
	$('#hc2, #hc3, #hc4, #hc5')
		.not("btn btn-primary")
		.removeClass("btn btn-primary disabled")
		.addClass("btn btn-primary");
	$('#hc1')
		.removeClass("btn btn-primary")
		.addClass("btn btn-primary disabled");
});
$('#hc2').click(function() {
	$('#hc1, #hc3, #hc4, #hc5')
